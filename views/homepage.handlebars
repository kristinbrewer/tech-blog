<!-- Loop over each object in the projects array -->
{{#each blogs as |blog| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      <a href="/blog/{{blog.id}}">{{blog.name}}</a>
    </h2>
    <p>
      <!-- INSERT BLOG POST Pass needed_funding value to the helper function 
      <span class="dollar-amount">{{format_amount project.needed_funding}}</span>
      needed! -->
    </p>
    <p>Created by {{blog.user.name}} on {{format_date project.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{blog.description}}
    </p>
  </div>
</div>
{{/each}}
